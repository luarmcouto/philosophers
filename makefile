clean:
	@$(RM) $(OBJECTS)
	@clear 
	@echo 
	@echo "$(RED)CLEANED$(RESET)"
	@echo

fclean: clean
	@$(RM) $(NAME)

re: clean all

.PHONY: all
		@echo "                                      â„¹ï¸ $(YELLOW) Dinner is ready! ðŸ½ï¸.$(RESET)"
		@sleep 0.1
		@echo
		@sleep 0.1